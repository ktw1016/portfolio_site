{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
    "no-control-regex": 0,
      "indent": [
        "warn",
        2,
        {
          "SwitchCase": 1,
          "ignoredNodes": [ "ConditionalExpression" ],
          "flatTernaryExpressions": true
        }
      ],
      "comma-dangle": [
        "warn",
        "always-multiline"
      ],
      "linebreak-style": [
          "off",
          "unix"
      ],
      "semi": [
          "warn",
          "always"
      ],
      "no-unused-vars": [
          "warn",
          { "args": "none" }
      ],
      "no-multi-spaces": [
          "warn",
          { "exceptions": { "Property": false } }
      ]
    }
}